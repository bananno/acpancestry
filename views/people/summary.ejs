<!DOCTYPE html>
<html>
<head>
    <title>Lundberg Ancestry | <%= person.name %></title>
    <%- include ../partials/header %>
</head>
<body>
    <h1><%= person.name %></h1>
    <p>
        <a href="/">back</a>
    </p>
    <h2>Family</h2>
    <h3>Parents</h3>
    <ul>
        <% person.parents.forEach(thisPerson => { %>
            <li>
                <%- include('../partials/linkToPerson', { params: {
                    person: thisPerson,
                }}) %>
            </li>
        <% }); %>
    </ul>
    <h3>Spouses</h3>
    <ul>
        <% person.spouses.forEach(thisPerson => { %>
            <li>
                <%- include('../partials/linkToPerson', { params: {
                    person: thisPerson,
                }}) %>
            </li>
        <% }); %>
    </ul>
    <h3>Children</h3>
    <ul>
        <% person.children.forEach(thisPerson => { %>
            <li>
                <%- include('../partials/linkToPerson', { params: {
                    person: thisPerson,
                }}) %>
            </li>
        <% }); %>
    </ul>
</body>
</html>
