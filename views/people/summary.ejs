<h2>Family</h2>
<h3>Parents</h3>
<ul>
    <% person.parents.forEach(thisPerson => { %>
        <li>
            <%- include('../partials/linkToPerson', { params: {
                person: thisPerson,
            }}) %>
        </li>
    <% }); %>
</ul>
<h3>Spouses</h3>
<ul>
    <% person.spouses.forEach(thisPerson => { %>
        <li>
            <%- include('../partials/linkToPerson', { params: {
                person: thisPerson,
            }}) %>
        </li>
    <% }); %>
</ul>
<h3>Children</h3>
<ul>
    <% person.children.forEach(thisPerson => { %>
        <li>
            <%- include('../partials/linkToPerson', { params: {
                person: thisPerson,
            }}) %>
        </li>
    <% }); %>
</ul>

<h2>Tree</h2>

<div class="person-tree">
    <%- include('./tree', { params: {
        person: person,
    }}) %>
</div>

<h2>Links</h2>

<% person.links.forEach(nextLink => { %>
    <%- include('../partials/formatLink', { params: {
        link: nextLink,
        fancy: true,
    }}) %>
<% }); %>
